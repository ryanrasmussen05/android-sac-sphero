    android:insetTop="@dimen/standard_inset"
    android:insetRight="@dimen/standard_inset"
    android:insetBottom="@dimen/standard_inset">
    <shape android:shape="rectangle">
        <corners android:radius="@dimen/standard_corner_radius" />
        <solid android:color="@color/buttonAnswerActiveColor" />
        <stroke
            android:width="3dp"
            android:color="@color/buttonAnswerBorderColor" />
        <padding android:left="@dimen/button_answer_custom_padding"
            android:top="@dimen/button_answer_custom_padding"
            android:right="@dimen/button_answer_custom_padding"
            android:bottom="@dimen/button_answer_custom_padding" />
    </shape>
</inset>
