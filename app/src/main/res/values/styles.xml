<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_primary_custom</item>
        <item name="android:textSize">@dimen/button_custom_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/button_secondary_custom</item>
        <item name="android:textSize">@dimen/button_custom_text_size</item>
    </style>

    <style name="AnswerButton">
        <item name="android:background">@drawable/button_answer_custom</item>
        <item name="android:textSize">@dimen/button_answer_custom_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="QuestionTextView">
        <item name="android:background">@drawable/text_view_question</item>
        <item name="android:textSize">@dimen/text_view_question_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_secondary_custom</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_custom</item>
        <item name="android:textSize">@dimen/edit_text_custom_text_size</item>
    </style>

    <style name="IncorrectTextView">
        <item name="android:background">@drawable/text_view_incorrect</item>
        <item name="android:textSize">@dimen/text_view_answers_text_size</item>
    </style>

    <style name="CorrectTextView">
        <item name="android:background">@drawable/text_view_correct</item>
        <item name="android:textSize">@dimen/text_view_answers_text_size</item>
    </style>

    <style name="TotalPointsTextView">
        <item name="android:background">@drawable/text_view_points</item>
        <item name="android:textSize">@dimen/text_view_points_text_size</item>
    </style>
</resources>
