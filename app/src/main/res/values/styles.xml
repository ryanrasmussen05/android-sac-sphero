<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/splashScreenBackground</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textSize">@dimen/button_custom_text_size</item>
    </style>

    <style name="IncorrectTextView">
        <item name="android:background">@drawable/text_view_incorrect</item>
        <item name="android:textSize">@dimen/text_view_answers_text_size</item>
    </style>

    <style name="CorrectTextView">
        <item name="android:background">@drawable/text_view_correct</item>
        <item name="android:textSize">@dimen/text_view_answers_text_size</item>
    </style>

    <style name="TotalPointsTextView">
        <item name="android:background">@drawable/text_view_points</item>
        <item name="android:textSize">@dimen/text_view_points_text_size</item>
    </style>
</resources>
